mixin b-card-sez()

  .b-card-sez
    .container
      .ui-list-links__container
        .ui-list-links__wrap
          ul.ui-list-links.ui-list-links_in-header.list-unstyled
            li.ui-list-links__item
              a.ui-list-links__link.active(href="#") Seasonal schedule
            li.ui-list-links__item
              a.ui-list-links__link(href="#") Ticket booking
            li.ui-list-links__item.ui-list-links__item-external
              a.ui-list-links__link(href="#")
                != pugHelpers.Icon.call(locals, {iconName: 'calendar', className: 'ic', iconWidth: '32', iconHeight: '32'})
                | Online scoreboard


    .b-card-sez__inner.bg-gray.section-area
      .container
        .b-card-sez-header
          form.b-card-sez-header__form.ui-search-inner
            != pugHelpers.Icon.call(locals, {iconName: 'search', className: 'ic stroke-primary', iconWidth: '18', iconHeight: '18'})
            input.ui-search-inner__input.js-search-mobile(type="text" placeholder="Search by flight number, city and airline")


          .b-card-sez-header__select
            != pugHelpers.Icon.call(locals, {iconName: 'globe', className: 'ic stroke-primary stroke-w2', iconWidth: '18', iconHeight: '18'})
            select.js-select(data-width="100%"  data-style="ui-select")
              option(value="") Acapulco
              option(value="") City 1
              option(value="") City 2
              option(value="") City 3
              option(value="") City 4

          .b-card-sez-header__date
            span.ui-daterange.input-daterange.input-group.js-date-group#datepicker
              != pugHelpers.Icon.call(locals, {iconName: 'date', className: 'ic fill-primary', iconWidth: '18', iconHeight: '18'})
              input.ui-daterange__item.ui-select(type="text" name="start" placeholder="start")
              span.input-group-addon  -
              |
              |
              input.ui-daterange__item.ui-select(type="text" name="end" placeholder="end")

